<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Application Theme -->
    <style name="Base.Theme.NAVIGI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary</item>
        
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Ripple Effect -->
        <item name="colorControlHighlight">@color/ripple_light</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.NAVIGI.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.NAVIGI.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.NAVIGI.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.NAVIGI.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.NAVIGI.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.NAVIGI.Caption</item>
        
        <!-- Corner Radius -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NAVIGI.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NAVIGI.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NAVIGI.LargeComponent</item>
    </style>

    <style name="Theme.NAVIGI" parent="Base.Theme.NAVIGI" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.NAVIGI</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.NAVIGI.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.NAVIGI.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.NAVIGI.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.NAVIGI.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.NAVIGI.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.NAVIGI.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.NAVIGI.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.NAVIGI.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.NAVIGI.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.NAVIGI.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.MediumComponent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.NAVIGI.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.MediumComponent</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.NAVIGI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.MediumComponent</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- TextField Styles -->
    <style name="Widget.NAVIGI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/on_surface_variant</item>
        <item name="android:textColorHint">@color/on_surface_variant</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.SmallComponent</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.NAVIGI.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_state_list</item>
        <item name="itemTextColor">@color/bottom_nav_state_list</item>
        <item name="android:background">@color/surface</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.NAVIGI.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.SmallComponent</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.NAVIGI.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorCornerRadius">4dp</item>
    </style>

    <!-- Dialog Style -->
    <style name="Widget.NAVIGI.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.LargeComponent</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="Widget.NAVIGI.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/on_secondary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NAVIGI.LargeComponent</item>
    </style>

</resources>